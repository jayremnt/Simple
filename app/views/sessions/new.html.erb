<% provide(:title, t('login.index.title')) %>
<h1><%= t('login.index.title') %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t('login.index.remember_me') %></span>
      <% end %>
      <%= f.submit t('login.index.title'), class: "btn btn-primary" %>
    <% end %>
    <p><%= t('login.index.new_user') %> <%= link_to t('login.index.sign_up_now'), signup_path %></p>
  </div>
</div>
